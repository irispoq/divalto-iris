;*
Public Procedure ZoomAvantRewrite																		; Traitements avant réécriture
BeginP																											; ZoomAvantRewrite
	COG_UT104.NOTE		= Note_Modification_(C_NOTE_NO, COG_UT104.Note, NoteObj='COG_UT104')
	COG_UT104.USERMO		= SYSTEM.USER
	COG_UT104.USERMODH		= Time(7)
	if COG_UT104.NOTE <> 0
		COG_UT104.CENOTE = 2
	else
		COG_UT104.CENOTE = 1
	endif
	MajTitreVar
	If Zoom.Ok = 'O'
		If Cog_UT104.Cog_Duree_Limitee = 2 And Cog_UT104.Cog_Nombre_Cotisation = system.esp
 			Zoom.Ok = 'S'
		ElsIf Cog_UT104.Cog_Duree_Limitee < 2
			Cog_UT104.Cog_Nombre_Cotisation = system.esp
		Endif
	Endif
EndP

