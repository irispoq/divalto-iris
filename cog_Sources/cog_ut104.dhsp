Public Procedure ZoomDebut																					; Initialisation du zoom
BeginP																											; ZoomDebut
	
	Init_Zoom(FicheNoBloc=0)
	Seek_Soc(MZ.DOS)
	Seek_CA(mz.Dos)
	G7.Projet = G3XZ.Projet
	G3XZ.Projet = system.esp

	Note_Debut   				;init de la gestion des notes

	ZOOM.TITREFIXE = `UT104 - Types de cotisations PDV`

	If Cog_UTTAB_Res() <> 0
		ProgramExit
	EndIf

EndP

