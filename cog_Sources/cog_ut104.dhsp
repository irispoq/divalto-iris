	COG_UT104.USERCRDH	= ' '
	COG_UT104.USERMO		= ' '
	COG_UT104.USERMODH	= ' '
	COG_UT104.NOTE			= 0
	COG_UT104.CENOTE		= 1
EndP

;*
Public Procedure ZoomApresCleCreation																	; Génération de la clé en création
BeginP																											; ZoomApresCleCreation
	ZOOM.CLE		= [ 'E' COG_UT104.DOS COG_UT104.ETB COG_UT104.COG_COTISATION_PDV COG_UT104.REF ]
	ZOOM.RES	= 'GIE' & COG_UT104.DOS & COG_UT104.ETB & COG_UT104.COG_COTISATION_PDV & COG_UT104.REF
	MajTitreVar
EndP

;*
Public Procedure ZoomCreationRes																			; Réservation d'entités complémentaires en création
BeginP																											; ZoomCreationRes
	Note_Chargement_  ( C_NOTE_NO  , 0 )
EndP

;*
Public Procedure ZoomAvantWrite																			; Traitements avant écriture
BeginP																											; ZoomAvantWrite
	COG_UT104.NOTE		= Note_Creation_(C_NOTE_NO,NoteObj='COG_UT104')
	COG_UT104.CE1 = '4'
	COG_UT104.USERCR		= SYSTEM.USER
	COG_UT104.USERCRDH	= Time(7)
	if COG_UT104.NOTE <> 0
		COG_UT104.CENOTE = 2
	else
		COG_UT104.CENOTE = 1
	endif
	If Zoom.Ok = 'O'
		If Cog_UT104.Cog_Duree_Limitee = 2 And Cog_UT104.Cog_Nombre_Cotisation = system.esp
 			Zoom.Ok = 'S'
		ElsIf Cog_UT104.Cog_Duree_Limitee < 2
			Cog_UT104.Cog_Nombre_Cotisation = system.esp
		Endif
	Endif
EndP

;*
Public Procedure ZoomApresCreation																		; Compte-rendu de la création
BeginP																											; ZoomApresCreation
	MajTitreVar
EndP

;*
Public Procedure ZoomModification																		; Traitements avant l'entrée en modification
BeginP																											; ZoomModification
	ZOOM.RES	= 'GIE' & COG_UT104.DOS & COG_UT104.ETB & COG_UT104.COG_COTISATION_PDV & COG_UT104.REF
EndP

