public procedure ZoomConsultFiche 	; à utiliser si note
beginp

	switch Harmony.Key

	case k_f7
		zoom_call()
	
	case k_sf6
		note_consultation_(0,Cog_Valid_PMt.note)
	
	case k_ctrl_f6
		joint_consultation_(0,Cog_Valid_PMt.joint)

	endswitch 

endp

;*
public procedure ZoomConsultListe ; à utiliser si note
beginp

	switch Harmony.Key

	case k_f7
		zoom_call()
	
	case k_sf6
		note_consultation_(0,Cog_Valid_PMt.note)
	
	case k_ctrl_f6
		joint_consultation_(0,Cog_Valid_PMt.joint)

	case k_f12
		if g7.pong = true
			Envoyer_Selections
		endif

	endswitch 

endp


